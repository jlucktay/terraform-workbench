#-----------------------------------------------------------------------
# This module looks up the latest Debian AMI and returns the ID
#-----------------------------------------------------------------------

data "aws_ami" "debian_latest" {
  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "image-type"
    values = ["machine"]
  }

  filter {
    name   = "name"
    values = ["debian-*-gp2-*"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

  filter {
    name   = "state"
    values = ["available"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }

  most_recent = true
}
